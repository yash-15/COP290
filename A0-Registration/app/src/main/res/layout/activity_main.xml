<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="spycoders.cop290registration.MainActivity"
    android:background="@drawable/wood1">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtTEAM_NAME"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TEAM NAME"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <AutoCompleteTextView
                android:id="@+id/txtNAME1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME 1"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:visibility="invisible" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/txtENTRYNUMBER1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTRY NUMBER 1"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:visibility="invisible" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/txtNAME2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME 2"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:visibility="invisible" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/txtENTRYNUMBER2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTRY NUMBER 2"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="invisible" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/txtNAME3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME 3"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:visibility="invisible" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/txtENTRYNUMBER3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTRY NUMBER 3"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="invisible" />
            </android.support.design.widget.TextInputLayout>



            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THIRD MEMBER"
                android:id="@+id/checkBoxAddThirdMember"
                android:textColor="#5a1313"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:onClick="Select"
                android:visibility="visible" />


            <Button
                android:id="@+id/btnExit"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="EXIT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:enabled="true"
                android:visibility="visible"
            android:background="@android:color/transparent"
            android:clickable="true" />

            <Button
                android:id="@+id/btnReset"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-49dp"
                android:text="RESET"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="100dp"
                android:enabled="true"
                android:visibility="visible"
                android:background="@android:color/transparent"
                android:clickable="true" />

            <Button
                android:id="@+id/btnSUBMIT"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-49dp"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="255dp"
                android:enabled="false"
                android:visibility="visible"
                android:background="@android:color/transparent"
                android:clickable="true"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
