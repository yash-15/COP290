<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="spycoders.moodleplus">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Courses"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".My_Calendar"
            android:label="@string/title_activity_my__calendar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Grades"
            android:label="@string/title_activity_grades"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Threads"
            android:label="@string/title_activity_threads"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
