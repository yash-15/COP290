<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="spycoders.moodleplus">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login_act"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen_act"
            android:label="@string/home" />
        <activity
            android:name=".Notifications_act"
            android:label="@string/notifications" />
        <activity
            android:name=".AllGrades_act"
            android:label="@string/allGrades" />
        <activity
            android:name=".MyCourses_act"
            android:label="@string/myCourses" />
        <activity
            android:name=".MyProfile_act"
            android:label="@string/myProfile"></activity>
    </application>

</manifest>
